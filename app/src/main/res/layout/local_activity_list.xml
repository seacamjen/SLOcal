<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:hint="Name"
        android:id="@+id/localNameTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        app:layout_constraintHorizontal_bias="0.078"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/localCommentTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:hint="address"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/localAddressTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.133" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="49dp"
        android:hint="comments"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:id="@+id/localCommentTextView"
        app:layout_constraintHorizontal_bias="0.384"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/localAddressTextView"
        app:layout_constraintVertical_bias="0.379" />

</android.support.constraint.ConstraintLayout>